<h1>Hey grrrrl...let's get stuff done</h1>
<img src="http://ell.h-cdn.co/assets/cm/15/02/480x221/placeholder_54ae89503fc86_-_elle-04-ryan-gosling.jpg" alt="Ryan Renolds is cheering for your success" />
<% @tasks.each do |task| %>

  <article>
    <% if task[:status] %>
      <h2><%= link_to( task[:thing], show_path(task[:id]) ) %> â˜‘</h2>
      <p>
        <%= button_to( "Mark incomplete", {action: "mark_incomplete", id: task[:id]}, method: :post ) %>
      </p>
    <% else %>
      <h2> <%= link_to( task[:thing], show_path(task[:id]) ) %></h2>
      <p>
        <%= button_to( "Mark Complete", {action: "mark_complete", id: task[:id]}, method: :post ) %>
      </p>
    <% end %>
    <ul>
      <li><%= button_to( "Edit Task", {action: "edit", id: task[:id]}, method: :get ) %></li>
      <li><%= button_to( "Delete Task",{action: "delete", id: task[:id]}, method: :delete, data: {confirm: "Don't just delete because you're lazy... ðŸ™„"}) %></li>
    </ul>

  </article>
<% end %>
