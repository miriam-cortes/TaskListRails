<h1>Grrrl, I see you trying to get on that Show page</h1>
<article>
  <h2> <%= @task.thing %> </h2>
  <h3> Description: <%= @task.description %> </h3>

  <h5> Completed?
    <% if @task.status %>
      CHECK! <br />
      Completion date: <%= @task.complete_date %>
    <% else %>
      NOPE!
    <% end %>
  </h5>

  <ul>
    <% if @task[:status] %>
      <li> <%= button_to( "Mark incomplete", {action: "mark_incomplete", id: @task[:id]}, method: :post ) %> </li>
    <% else %>
      <li> <%= button_to( "Mark Complete", {action: "mark_complete", id: @task[:id]}, method: :post ) %> </li>
    <% end %>
    <li><%= button_to( "Edit Task", {action: "edit", id: @task[:id]}, method: :get ) %></li>
    <li> <%= button_to( "Delete Task",{action: "delete", id: @task[:id]}, method: :delete, data: {confirm: "Don't just delete because you're lazy... ðŸ™„"}) %> </li>
  </ul>


</article>
